
<div class="container">
    <div class="row">
        <div class="col-md-12">
             <div class="row">
                <div class="col-md-6 mx-auto">

					<h1>Nueva Sala</h1>

					<%= form_for @chat_room do |f| %>
					  <div class="form-group">
					    <%= f.label :'Nombre de la nueva sala' %>
					    <%= f.text_field :title, autofocus: true, class: 'form-control' %>
					  </div>
                     <div class="actions">
					    <%= f.submit "Agregar!", class: "btn btn-success float-right" %>
                      </div>
					<% end %>

 				</div>
            </div>
        </div>
    </div>
</div>