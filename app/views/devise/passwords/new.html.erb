<!-- Olvido clave -->

<div class="container">
    <div class="row">
        <div class="col-md-12">
             <div class="row">
                <div class="col-md-6 mx-auto">
                    <div class="card rounded-0">
                     <div class="card-header">
                            <h4 class="mb-0"><B>Olvidaste tu clave?</B></h4>
                        </div>
                         <div class="card-body">

          							<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          							  <%= devise_error_messages! %>
          							  <div class="form-group">
          							    <%= f.label :'Ingrresa tu correo elctronico' %><br />
          							    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "form-control form-control-sm rounded-0"%>
          							  </div>

          							  <div class="actions">
          							    <%= f.submit "Enviar correo" , class: "btn btn-success btn-sm float-right" %>
          							  </div>
          							<% end %>

          							<%= render "devise/shared/links" %>
            						</div>
                   </div>
                </div>
            </div>
        </div>
    </div>
</div>
