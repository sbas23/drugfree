<!-- PAGINA PRINCIPAL DE LOGUEO -->

<div class="container py-5">
    <div class="row">
        <div class="col-md-12">
             <div class="row" style="margin-top: 80px;">
                <div class="col-md-6 mx-auto">

                    <!-- form card login -->
                    <div class="card rounded-0">
                        <div class="card-header">
                            <h3 class="mb-0"><B>Bienvenido</B></h3>
                        </div>
                        <div class="card-body">
                            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                            <div class="form-group">
                              <%= f.label :'Correo electronico' %><br />
                              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg rounded-0" %>
                            </div>

                            <div class="form-group">
                              <%= f.label :Clave %><br />
                              <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-lg rounded-0" %>
                            </div>

                            <% if devise_mapping.rememberable? -%>
                              <div class="form-group">
                                <%= f.check_box :remember_me %>
                                <%= f.label :'Recordarme', class: "custom-control-description small text-dark" %>
                              </div>
                            <% end -%>

                            <div class="actions">
                              <%= f.submit "Inicio", class: "btn btn-success btn-lg float-right" %>
                            </div>
                          <% end %>

                          <%= render "devise/shared/links" %>
                        </div>
                        <!--/card-block-->
                    </div>
                    <!-- /form card login -->
                </div>
            </div>
            <!--/row-->
        </div>
        <!--/col-->
    </div>
    <!--/row-->
</div>
<!--/container-->
