<!-- PAGINA PRINCIPAL DE LOGUEO -->

<div class="container">
    <div class="row">
        <div id="background_login" class="col-md-8">
        </div>
        <div class="col-md-4">
            <!-- form card login -->
            <div class="card rounded-0">
                <div class="card-header">
                    <h4 class="mb-0"><B>Bienvenido</B></h4>
                </div>
                <div class="card-body">
                    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    <div class="form-group">
                      <%= f.label :'Correo electronico' %><br />
                      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-sm rounded-0" %>
                    </div>

                    <div class="form-group">
                      <%= f.label :Clave %><br />
                      <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-sm rounded-0" %>
                    </div>

                    <% if devise_mapping.rememberable? -%>
                      <div class="form-group">
                        <%= f.check_box :remember_me %>
                        <%= f.label :'Recordarme', class: "custom-control-description small text-dark" %>
                      </div>
                    <% end -%>

                    <div class="actions">
                      <%= f.submit "Inicio", class: "btn btn-success float-right" %>
                    </div>
                  <% end %>

                  <%= render "devise/shared/links" %>
                </div>
            </div>
        </div>
    </div>
</div>

