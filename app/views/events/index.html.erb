<div class="container py-5">
  <!-- Tabla de citas -->
  <div class="row">
      <div class="col-md" >
        <table class="table">
          <thead class="thead-dark">
            <tr>
              <th scope="col" class="text-center">Evento</th>
              <th scope="col" class="text-center">Inicio</th>
              <th scope="col" class="text-center">Fin</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @events.each do |event| %>
              <tr>
                <td><%= event.title %></td>
                <td><%= event.start_time %></td>
                <td><%= event.end_time %></td>
                <td>
                  <a id="calendarModalEvent" onclick="loadModal('<%= event.id %>','#contentDetailEvent')" href="#modalDetailEvent" data-toggle="modal">Detalle</a>
                </td>
                <td><%= link_to 'Editar', edit_event_path(event) %></td>
                <td><%= link_to 'Eliminar', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <%= link_to 'Crear cita', new_event_path, class: "btn btn-primary" %>
      </div>
  </div>
  <!-- Boton Calendario -->
  <div class="row">
    <div class="col-md-11">
    </div>

    <div class="col-md-1">
      <a id="calendarModalEvent" href="#modalCalendar" class="btn btn-success btn-lg" data-toggle="modal">
        <span class="fa fa-calendar"></span>
      </a>
    </div>
  </div>
</div>

<!-- Modal Calendario-->
<div class="modal fade" id="modalCalendar" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content" style="width: 120% !important;">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalCenterTitle">Calendario</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="container">
          <div class="row">
              <div class="col-md-12">
                <%= month_calendar events: @events do |date, events| %>
                  <%= date %>
                  <% events.each do |event| %>
                    <div>
                      <%= event.title %>
                    </div>
                  <% end %>
                <% end %>
              </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>


<!-- Modal Events-->
<div class="modal fade" id="modalDetailEvent" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content" style="width: 120% !important;">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalCenterTitle">Calendario</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="container">
          <div class="row">
              <div class="col-md-12">
                
                <div id ="contentDetailEvent"></div>

              </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>