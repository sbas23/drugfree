  <!-- Modal Calendario-->
  <div class="modal fade" id="modalCalendarShow" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content" style="width: 120% !important;">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalCenterTitle">Calendario</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="container">
            <div class="row">
                <div class="col-md-12">
					<p>
					  <strong>Title:</strong>
					  <%= @event.title %>
					</p>

					<p>
					  <strong>Start time:</strong>
					  <%= @event.start_time %>
					</p>

					<p>
					  <strong>End time:</strong>
					  <%= @event.end_time %>
					</p>

					<%= link_to 'Edit', edit_event_path(@event) %> |
					<%= link_to 'Back', events_path %>
                </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>