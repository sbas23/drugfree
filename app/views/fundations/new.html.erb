<div class="container">
<%= form_for @fundation do |f| %>

	<div class="form-group">
        <%= f.label :'Nombre fundacion:' %><br />
        <%= f.text_field :fundation_name, class: "form-control form-control-sm rounded-0" %>
    </div>

    <div class="form-group">
        <%= f.label :'Direccion:' %><br />
        <%= f.text_field :address, class: "form-control form-control-sm rounded-0" %>
    </div>

	<div class="form-group">
        <%= f.label :'Telefono:' %><br />
        <%= f.text_field :phone, class: "form-control form-control-sm rounded-0" %>
    </div>

	<div class="form-group">
        <%= f.label :'Correo electronico:' %><br />
        <%= f.email_field :mail, class: "form-control form-control-sm rounded-0" %>
    </div>

    <div class="actions">
      <%= f.submit "Guardar", class: "btn btn-success btn-sm float-right" %>
    </div>

<% end %>
</div>
