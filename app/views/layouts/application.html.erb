
<!DOCTYPE html>
<html>
<head>
    <title>drugfree</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <%= action_cable_meta_tag %>
    
</head>
<body>
    <!-- MENU PRINCIPAL -->
    <div class="navbar-wrapper">
      <div class="container">
        <div class="navbar navbar-inverse navbar-static-top">
            <div class="navbar-collapse collapse">
              <ul class="nav justify-content-end">
                <li class="nav-item">
                  <a class="nav-link active" style="color: #A4A4A4" href="/index">Home</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" style="color: #A4A4A4" href="/chat">Chat</a>
                </li>
                 <li class="nav-item">
                  <a class="nav-link" style="color: #A4A4A4" href="#">Citas</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" style="color: #A4A4A4" href="/forum">Foro</a>
                </li>
                <li class="nav-item" style="color: #A4A4A4; margin-top: 10px;">
                  <% if current_user %>
                    <%= current_user.name %>
                  <% end %>
                </li>
                <li class="nav-item" style="margin-top: 5px;">
                  <!-- Login -->
                  <% if current_user %>
                       <div class="nav-link" > 
                          <%= link_to 'Logout', destroy_user_session_path, method: :delete %>
                       </div>
                  <% else %>
                       <div class="nav-link"> 
                          <%= link_to 'Login', new_user_session_path %>
                       </div>
                  <% end %>
                </li>
              </ul>
            </div>
        </div>
      </div>
    </div>

    <%= yield %>

    <!-- Alertas -->
    <div class="container">
      <% flash.each do |key, value| %>
        <% if key == "alert" %>
          <div class="alert alert-danger"><%= value %></div>
        <% elsif key == "notice" %>
          <div class="alert alert-success"><%= value %></div>
        <% else %>
          <div class="alert alert-secondary"><%= value %></div>
        <% end %>
      <% end %>
    </div>

    

    <script src="/assets/jquery-3.3.1.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
</body>
</html>