
<!DOCTYPE html>
<html>
<head>
    <title>drugfree</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <style><%= yield :stylesheets %></style>
  </head>
<body>
    <!-- MENU PRINCIPAL -->

      <div id="topMenu" class="container">
        <div class="h6 nav justify-content-end shadow-lg p-3 mb-5 bg-white rounded ">

              <ul class="nav justify-content-end ">
                <li class="nav-item">
                  <a class="nav-link" href="/index">Home</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/chat_rooms">Chat</a>
                </li>
                 <li class="nav-item">
                  <a class="nav-link" href="/events">Citas</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/forum">Foro</a>
                </li>
                <li class="nav-item" >
                  <% if current_user %>
                    <span class="nav-link"> <%= current_user.name %></span>
                  <% end %>
                </li>
                <li>
                  <!-- Login -->
                  <% if current_user %>
                       <div class="nav-link" > 
                          <%= link_to 'Logout', destroy_user_session_path, method: :delete %>
                       </div>
                  <% else %>
                       <div class="nav-link"> 
                          <%= link_to 'Login', new_user_session_path %>
                       </div>
                  <% end %>
                </li>
              </ul>

        </div>
      </div>


    <%= yield %>

    <!-- Alertas -->
    <div class="container">
      <% flash.each do |key, value| %>
        <% if key == "alert" %>
          <div class="alert alert-danger"><%= value %></div>
        <% elsif key == "notice" %>
          <div class="alert alert-success"><%= value %></div>
        <% else %>
          <div class="alert alert-secondary"><%= value %></div>
        <% end %>
      <% end %>
    </div>    

</body>
</html>